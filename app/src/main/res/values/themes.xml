<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NothCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="Text.Heading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ndot</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Digits" parent="Button.Base">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Operator" parent="Button.Base">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/full_white</item>
    </style>

    <style name="Button.Delete" parent="Button.Base">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/full_white</item>
    </style>

    <style name="Button.Equals" parent="Button.Base">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/full_black</item>
    </style>

    <style name="Button.Base" parent="Widget.Material3.Button">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:fontFamily">@font/ndot</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="shapeAppearance">@style/RoundShape</item>
    </style>

    <style name="RoundShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">100dp</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Theme.NothCalculator" parent="Base.Theme.NothCalculator" />
</resources>