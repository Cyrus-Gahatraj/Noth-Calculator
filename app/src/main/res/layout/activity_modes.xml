<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modes">

    <com.example.nothcalculator.HeadingView
        android:id="@+id/modeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/modeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        android:rowCount="1"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modeHeader">

        <androidx.cardview.widget.CardView
            android:id="@+id/defaultCalc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:elevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp">

            <TextView
                style="@style/ModesCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Default" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/scientificCalc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:elevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp">

            <TextView
                style="@style/ModesCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Scientific" />

        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>